<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head') %>
    <title>Quote Details</title>
</head>
<body>
    <%- include('partials/_header') %>
    <div class="container mt-5">
        <h1>Quote Details</h1>
        <div class="quote-details">
            <p><strong>Quote ID:</strong> <%= quote.quoteId %></p>
            <p><strong>Title:</strong> <%= quote.title %></p>
            <p><strong>Scope of Work:</strong> <%= quote.scopeOfWork %></p>
            <p><strong>Status:</strong> <%= quote.status %></p>
            <p><strong>Service Type:</strong> <%= quote.serviceType %></p>
            <p><strong>Frequency:</strong> <%= quote.frequency ? quote.frequency : 'N/A' %></p>
            <p><strong>Initial Cleaning Options:</strong> <%= quote.initialCleaningOptions.join(', ') %></p>
            <h2>Items</h2>
            <ul>
                <% quote.items.forEach(function(item) { %>
                    <li>
                        <%= item.description %> - Quantity: <%= item.quantity %>, Price: $<%= item.price.toFixed(2) %>
                    </li>
                <% }); %>
            </ul>
        </div>
        <a href="/quotes/<%= quote._id %>/edit" class="btn btn-primary">Edit Quote</a>
        <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
    <%- include('partials/_footer') %>
</body>
</html>
