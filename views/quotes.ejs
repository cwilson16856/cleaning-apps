<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs') %>
    <title>Quotes</title>
</head>
<body>
    <%- include('partials/_header.ejs') %>
    <div class="container mt-5">
        <h1>Quotes</h1>
        <div class="mb-3">
            <label for="clientSearch" class="form-label">Search Clients</label>
            <input type="text" class="form-control" id="clientSearch" placeholder="Search for a client...">
            <div id="clientResults" class="list-group mt-2"></div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Client Name</th>
                    <th>Title</th>                    
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% quotes.forEach(quote => { %>
                    <tr>
                        <td><%= quote.clientName %></td>
                        <td><%= quote.title %></td>                       
                        <td><%= quote.status %></td>
                        <td>
                            <a href="/quotes/<%= quote._id %>" class="btn btn-primary">View</a>
                            <a href="/quotes/<%= quote._id %>/edit" class="btn btn-warning">Edit</a>
                            <form action="/quotes/<%= quote._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/quotes/new" class="btn btn-primary">Add New Quote</a>
    </div>
    <%- include('partials/_footer.ejs') %>
    <script src="/js/clientSearch.js"></script>
</body>
</html>
