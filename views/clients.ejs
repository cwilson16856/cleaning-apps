<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head.ejs') %>
<body>
  <%- include('partials/_header.ejs', { currentPath: currentPath }) %>

    <div class="container mt-5">
        <h1>Clients</h1>
        <div class="mb-3">
            <input type="text" id="clientSearch" class="form-control" placeholder="Search clients by name...">
            <div id="clientResults" class="list-group mt-2"></div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Client ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (clients.length === 0) { %>
                    <tr>
                        <td colspan="5" class="text-center">No clients available</td>
                    </tr>
                <% } else { %>
                    <% clients.forEach(client => { %>
                        <tr>
                            <td><%- client.name %></td>
                            <td><%- client.email %></td>
                            <td><%- client.phoneNumber %></td>
                            <td><%- client._id %></td>
                            <td>
                                <a href="/clients/<%= client._id %>/profile" class="btn btn-secondary btn-sm">View</a>
                                <a href="/clients/<%= client._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                                <button class="btn btn-danger btn-sm remove-client" data-client-id="<%= client._id %>">Remove</button>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('partials/_footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+3oF4Lg3aG0gH5g8c9x7+eO9g6+4" crossorigin="anonymous"></script>
    <script src="/js/clientSearch.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const removeButtons = document.querySelectorAll('.remove-client');
            removeButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const clientId = this.dataset.clientId;
                    if (confirm('Are you sure you want to remove this client?')) {
                        try {
                            const response = await fetch(`/clients/${clientId}`, {
                                method: 'DELETE',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'CSRF-Token': '<%= csrfToken %>'
                                }
                            });
                            if (!response.ok) throw new Error('Network response was not ok');
                            const result = await response.json();
                            if (result.success) {
                                location.reload(); // Reload the page to reflect the removal
                            } else {
                                alert('Failed to remove client. Please try again.');
                            }
                        } catch (error) {
                            console.error('Error removing client:', error);
                            alert('Error removing client. Please try again.');
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
