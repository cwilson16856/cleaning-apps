<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head') %>
    <title>Clients</title>
</head>
<body>
    <%- include('partials/_header') %>
    <div class="container mt-5">
        <h1>Clients</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% clients.forEach(client => { %>
                    <tr>
                        <td><%= client.name %></td>
                        <td><%= client.email %></td>
                        <td><%= client.phoneNumber %></td>
                        <td>
                            <a href="/clients/<%= client._id %>/edit" class="btn btn-warning">Edit</a>
                            <form action="/clients/<%= client._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/clients/new" class="btn btn-primary">Add New Client</a>
    </div>
    <%- include('partials/_footer') %>
</body>
</html>
