<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs') %>
    <title>Manage Service Items</title>
</head>
<body>
    <%- include('partials/_header.ejs') %>

    <div class="container mt-5">
        <h1>Manage Service Items</h1>
        <div class="mb-3">
            <a href="/items/new" class="btn btn-primary">Create New Item</a>
        </div>
        <% if (serviceItems.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% serviceItems.forEach(function(item) { %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><%= item.description %></td>
                            <td><%= item.category %></td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td>
                                <a href="/items/<%= item._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/items/<%= item._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No service items found. <a href="/items/new">Create a new item</a>.</p>
        <% } %>
    </div>

    <%- include('partials/_footer.ejs') %>
    <script src="/js/main.js"></script>
</body>
</html>
